<section class="dashboard-main">
  <h1> <%= current_user.first_name %>'s Dashboard </h1>
  <%= button_to 'Connect to Github', "/auth/github"%>
  <%= button_to 'Log Out', logout_path, method: 'delete', class: "btn btn-primary mb1 bg-teal" %>
  <h3>Account Details</h3>
  <ul>
    <li> <%= current_user.first_name  %> <%= current_user.last_name %> </li>
    <li> <%= current_user.email%> </li>
  </ul>

  <section>
    <h1>Bookmarked Segments</h1>
  </section>
  <div id='tutorial'>
<% if @facade.videos.present? %>
      <ul>
        <% tutorial = nil %>
        <% @facade.videos.find_in_batches(batch_size: 5) do |batch| %>
          <% batch.each do |video| %>
          <li>
              <% if tutorial != video.tutorial %>
                <% tutorial = video.tutorial %>
                <span class="tutorial"><%= link_to tutorial.title, tutorial_path(tutorial) %></span>
          </li>
          <li>
              <% end %>
              <%= link_to video.title, tutorial_path(tutorial, video_id: video.id) %>
          </li>
          <% end %>
        <% end %>
      </ul>
    <% else %>
      <p>No bookmarks yet</p>
    <% end %>
  </div>
  <% if current_user.github_token %>
  <section id="github">
    <h1>Github Repositories</h1>
    <% @facade.user_repos(5).each_with_index do |repo, index| %>
    <div class="repository" id="repo-<%= index %>">
      <a class="repo-link" href="<%= repo.url %>">
        <p><%= repo.name %></p>
      </a>
    </div>
    <% end %>
    <h1>Github Followers</h1>
    <div id="followers">
      <% @facade.user_followers.each do |follower| %>
      <div class="follower">
        <a href="<%= follower.url %>" class="user-link">
          <p><%= follower.handle %></p>
      <% if follower.exists_in_database? && !@facade.user_friend?(follower.user_in_database) %>
          <p><%= button_to "Add Friend", user_friendships_path(current_user, friends: follower.user_in_database) %></p>
      <% end %>
        </a>
      </div>
      <% end %>
    </div>
    <h1>Following on Github</h1>
    <div id="followings">
      <% @facade.user_followings.each do |following| %>
      <div class="following">
        <a href="<%= following.url %>" class="user-link">
          <p><%= following.handle %></p>
        </a>
      </div>
      <% end %>
    </div>
    <div>
    <h1>Friends on Github</h1>
      <ul>
        <% @facade.user_friends.each do |user| %>
          <li>
          <%= user.first_name %> <%= user.last_name %>
          <div class="delete_friend_btn">
            <%= button_to "Remove Friend", user_friendship_path(current_user, user), :method => "delete" %>
          </div>
          </li>
        <% end %>
      </ul>
    </div>
  </section>
  <% end %>
</section>
